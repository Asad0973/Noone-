<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hello Kitty Encouragement</title>
  <style>
    body {
      text-align: center;
      background-color: #fddde6; /* Hello Kitty pink background color */
      font-family: 'Arial', sans-serif;
      margin: 0;
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    #kitty-container {
      animation: bounce 1s infinite alternate; /* Bounce animation */
    }

    #kitty-image {
      width: 200px; /* Adjust the size as needed */
      height: auto;
    }

    #kitty-message {
      font-size: 24px;
      color: #ff3385; /* Hello Kitty pink text color */
      margin-top: 20px;
      opacity: 0;
      animation: fadeIn 1s ease-in-out forwards; /* Fade in animation */
    }

    #change-message-btn {
      background-color: #ff3385;
      color: #fff;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      border: none;
      border-radius: 5px;
      margin-top: 20px;
    }

    @keyframes bounce {
      to {
        transform: translateY(-20px);
      }
    }

    @keyframes fadeIn {
      to {
        opacity: 1;
      }
    }
  </style>
</head>
<body>
  <div id="kitty-container">
    <img id="kitty-image" src="hello_kitty_image.jpg" alt="Hello Kitty">
    <div id="kitty-message">You did your best!</div>
  </div>
  <button id="change-message-btn" onclick="changeMessage()">Change Message</button>

  <script>
    const messages = [
      "You did your best, hun!",
      "You will pass next time for sure!",
      "I love you so much!",
      "You better don't cry now"
    ];

    let currentMessageIndex = 0;

    function changeMessage() {
      const messageElement = document.getElementById('kitty-message');
      messageElement.textContent = messages[currentMessageIndex];
      currentMessageIndex = (currentMessageIndex + 1) % messages.length;
    }
  </script>
</body>
</html>
